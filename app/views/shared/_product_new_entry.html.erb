<%= semantic_form_for @product , :html => {:id => 'pc' } do |f|  %>
	
	<%= f.semantic_errors :state %>
	<%= f.inputs :name,:unit, :name => "product" %>
	<%= f.input :description, :as=> :select, :collection => Hash[current_user.categories.all.map{|p| [p.name,p.name]}],:include_blank => false %>
	
	<%= f.action :submit, :button_html => {:class => "btn"} %>
<% end %>